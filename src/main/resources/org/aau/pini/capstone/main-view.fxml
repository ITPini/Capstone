<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.aau.pini.capstone.controllers.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="importButton" mnemonicParsing="false" onAction="#actionImport" text="Import image" />
                        <MenuItem fx:id="exportButton" mnemonicParsing="false" onAction="#actionExport" text="Export image" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox prefWidth="250.0" BorderPane.alignment="CENTER">
            <children>
                <TitledPane prefHeight="200.0" prefWidth="200.0" text="Algorithms">
                    <content>
                        <ListView fx:id="algorithmListView" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </TitledPane>
                <TitledPane prefHeight="200.0" prefWidth="200.0" text="Factor">
               <content>
                  <Slider fx:id="slider" blockIncrement="0.1" majorTickUnit="0.5" max="1.0" min="-1.0" minorTickCount="5" showTickLabels="true" showTickMarks="true">
                     <padding>
                        <Insets left="40.0" right="40.0" />
                     </padding>
                  </Slider>
               </content></TitledPane>
            <BorderPane prefHeight="74.0" prefWidth="250.0">
               <center>
                      <Button fx:id="applyButton" mnemonicParsing="false" onAction="#applyAlgorithm" text="Apply" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Rectangle fx:id="colorBox" arcHeight="5.0" arcWidth="5.0" height="200.0" onMouseMoved="#displayColor" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            </children>
        </VBox>
    </left>
    <center>
        <ImageView fx:id="imageView" fitHeight="690.0" fitWidth="1026.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
